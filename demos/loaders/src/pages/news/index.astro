---
import { getLiveCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';

const { entries: news, error } = await getLiveCollection('news', { limit: 20 });

if (error) {
  console.error('Failed to load news:', error.message);
}
---

<Layout title="BBC Science & Environment News">
  <main>
    <h1>ðŸ”¬ BBC Science & Environment News</h1>
    <p>Live news feed from BBC Science & Environment RSS</p>
    
    {error ? (
      <div class="error">
        <h2>Error Loading News</h2>
        <p>{error.message}</p>
      </div>
    ) : (
      <ul role="list" class="link-card-grid">
        {news?.map((article) => (
          <Card
            href={`/news/${encodeURIComponent(article.id)}`}
            title={article.data.title || 'Untitled'}
            body={article.data.description || 'No description available'}
          />
        ))}
      </ul>
    )}
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  
  .error {
    background: #ff4444;
    color: white;
    padding: 1rem;
    border-radius: 8px;
    margin: 1rem 0;
  }
  
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>